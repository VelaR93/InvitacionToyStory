@page
@model InvitacionModel
@{
    ViewData["Title"] = "Invitación";
}

<main class="invite">
    <div class="clouds-bg" aria-hidden="true"></div>
    <img src="~/images/alien.png"
         alt=""
         class="character character--alien"
         aria-hidden="true" />
    <img src="~/images/slinky.png"
         alt=""
         class="character character--dog"
         aria-hidden="true" />
    <img src="~/images/rex1.png"
         alt=""
         class="character character--rex"
         aria-hidden="true" />




    <section class="screen screen--active">
        <div class="hero">
            <h1 class="hero-title">¡Hay una fiesta en el cuarto de Andy!</h1>

            <p class="hero-text">
                Prepárate para una aventura muy especial.
            </p>

            <!-- ESTO es lo que antes no tenías -->
            <a id="btnStart" class="btn btn--primary" href="/Invitacion">
                Iniciar la aventura
            </a>
        </div>
    </section>
</main>
